.ui.large.inverted.menu
  .item
    .brand
      = link_to root_url do
        | Evry.i
        i.time.icon
  - if user_signed_in?
    .item= link_to "Tasks", tasks_path, id: "task-list-menu"

    - if user_signed_in?
      .right.menu
        - unless current_user.is_guest?
          .item= link_to "My Account", edit_user_registration_path
        .item= ui_button "Logout", destroy_user_session_path, "red logout", method: :delete

  - else
    .right.menu
      .item= ui_button "Sign In", new_user_session_path, "teal"

